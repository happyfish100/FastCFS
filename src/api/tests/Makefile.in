.SUFFIXES: .c .o .lo

COMPILE = $(CC) $(CFLAGS)
INC_PATH = -I/usr/local/include -I../../include
LIB_PATH = -L.. $(LIBS) -lfcfsapi -lfdirclient -lfsclient -lfastcommon
TARGET_PATH = $(TARGET_PREFIX)/bin

STATIC_OBJS =

ALL_PRGS = test_file_op test_file_copy

all: $(STATIC_OBJS) $(ALL_PRGS)

.o:
	$(COMPILE) -o $@ $<  $(STATIC_OBJS) $(LIB_PATH) $(INC_PATH)
.c:
	$(COMPILE) -o $@ $<  $(STATIC_OBJS) $(LIB_PATH) $(INC_PATH)
.c.o:
	$(COMPILE) -c -o $@ $<  $(INC_PATH)

install:
	mkdir -p $(TARGET_PATH)
	cp -f $(ALL_PRGS) $(TARGET_PATH)

clean:
	rm -f $(STATIC_OBJS) $(ALL_PRGS)

